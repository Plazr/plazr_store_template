<section id="login-form">
	<div class="row-fluid">
		<h2>Inciar Sessão</h2>
	</div>

	<div class="row-fluid">
		<div class="span4">
			<%= form_for resource, as: resource_name, url: session_path(resource_name), :html => { :class => [:form, 'form-horizontal'] } do |f| %>
				<div class="control-group">
					<%= f.label :email, 'Email', class: 'control-label' %>
					<div class="controls">
						<%= f.email_field :email, placeholder: 'Email' %>
					</div>
				</div>
				<div class="control-group">
					<%= f.label :password, 'Password', class: 'control-label' %>
					<div class="controls">
						<%= f.password_field :password, placeholder: 'Password' %>
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<% if devise_mapping.rememberable? %>
							<label class="checkbox">
								<%= f.check_box :remember_me %> Lembrar-se
							</label>
						<% end %>
						<%= f.submit 'Inciar Sessão', class: 'btn' %>
					</div>
				</div>
			<% end %>
		</div>
		<div class="span4">
			<h4>Redes Sociais</h4>
			<p>Inicie sessão com a sua rede social preferida:</p>
			<%= link_to (image_tag 'plazr_store/facebook.gif'), plazr_auth.user_omniauth_authorize_path(:facebook) %>
			<%= link_to (image_tag 'plazr_store/googleplus.gif'), plazr_auth.user_omniauth_authorize_path(:google) %>
		</div>

		<div class="span4">
			<h4>Outros</h4>
			<% if devise_mapping.registerable? && controller_name != 'registrations' %>
			<p>
			<%= link_to 'Registar-se', new_registration_path(resource_name) %>
			</p>
			<% end %>

			<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
			<p>
			<%= link_to 'Recuperar password', new_password_path(resource_name) %>
			</p>
			<% end %>

			<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
			<%= link_to 'Didn\'t receive confirmation instructions?', new_confirmation_path(resource_name) %>
			<% end %>

			<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
			<%= link_to 'Didn\'t receive unlock instructions?', new_unlock_path(resource_name) %>
			<% end %>
		</div>
	</div>
</section>